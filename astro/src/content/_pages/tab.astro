---
import DarkImage from "../../assets/Dark.png";
import TabGroup from "../../components/TabGroup.vue";

let lineSelected = 1;
let capsuleSelected = 4;
---

<!DOCTYPE html>
<html lang="zh-tw">
<head>
  <title>Tab Components</title>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
  <link rel="icon" type="image/png" sizes="16x16" href={DarkImage}>
</head>
<body>
<main id="main" class="min-h-screen content-center p-8">
  <h1 class="flex text-3xl items-center mb-16">
    <img class="mr-4" src={DarkImage} alt="logo" width="50" height="50"/>
    Tab
  </h1>
  <div class="flex flex-col">

    <div class="flex flex-wrap gap-12">
      <div class="flex flex-col flex-1">
        <h2 class="text-2xl font-900 mr-auto mb-4"> ðŸ“ƒ State</h2>
        <div class="flex items-center gap-4 mb-4">
          <label class="text-right min-w-[80px] mr-2">Selected</label>
          <div class="tcsmd-tab line" selected>
            Tab
          </div>
          <div class="tcsmd-tab capsule" selected>
            Tab
          </div>
        </div>
        <div class="flex items-center gap-4 mb-4 form-control">
          <label class="text-right min-w-[80px] mr-2">Enabled</label>
          <div class="tcsmd-tab line">
            Tab Label
          </div>
          <div class="tcsmd-tab capsule">
            Tab Label
          </div>
        </div>
        <div class="flex items-center gap-4 mb-4">
          <label class="text-right min-w-[80px] mr-2">Hover</label>
          <div class="tcsmd-tab line hover">
            Hover Tab
          </div>
          <div class="tcsmd-tab capsule hover">
            Hover Tab
          </div>
        </div>
        <div class="flex items-center gap-4 mb-4">
          <label class="text-right min-w-[80px] mr-2">Focus</label>
          <div class="tcsmd-tab line focus">
            Tab Label
          </div>
          <div class="tcsmd-tab capsule focus">
            Tab Label
          </div>
        </div>

        <div class="flex items-center gap-4 mb-4">
          <label class="text-right min-w-[80px] mr-2">Disabled</label>
          <span class="tcsmd-input cursor-not-allowed">
             <div class="tcsmd-tab line disabled">
              Disabled
            </div>
          </span>
          <span class="tcsmd-input cursor-not-allowed">
            <div class="tcsmd-tab capsule disabled">
             Disabled
            </div>
          </span>
        </div>
      </div>
    </div>

    <hr>

    <div class="mt-12 flex flex-wrap gap-4">
      <div class="flex flex-col gap-8">
        <h2 class="text-2xl font-900 mr-auto mb-4"> ðŸ“ƒ Tab Group</h2>

        <div class="flex items-center">
          <label class="text-right min-w-[80px] mr-4">Line - </label>
          <TabGroup client:only="vue" type="line" selectIndex={1} number={3}></TabGroup>
        </div>

        <div class="flex items-center">
          <label class="text-right min-w-[80px] mr-4">Capsule - </label>
          <TabGroup client:only="vue" type="capsule" selectIndex={1} number={3}></TabGroup>
        </div>
      </div>
    </div>
  </div>

</main>

<script is:inline>
  [...document.querySelectorAll('.tcsmd-tab-group.line > .tcsmd-tab')].forEach(el => {
    el.addEventListener('click', () => {
      lineSelected = el.getAttribute('tabindex');
      console.log('lineSelected=',lineSelected);
    });
  });

  [...document.querySelectorAll('.tcsmd-tab-group.capsule > .tcsmd-tab')].forEach(el => {
    el.addEventListener('click', () => {
      capsuleSelected = el.getAttribute('tabindex');
      console.log('capsuleSelected=',capsuleSelected);
    });
  });
</script>
</body>
</html>
