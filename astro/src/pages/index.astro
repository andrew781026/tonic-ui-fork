---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import {SITE_TITLE, SITE_DESCRIPTION} from '../consts';
---

<!DOCTYPE html>
<html lang="zh-tw">
<head>
  <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION}/>
</head>
<body>
<main class="grid place-items-center h-screen content-center">
  <h1 class="text-red-90 hover:text-green-300">🧑‍🚀 Hello, Astronaut!</h1>
  <hr class="hr">
  <h2 class="text-2xl font-900 mr-auto mb-4"> 📃 Primary</h2>
  <div class="flex flex-wrap gap-3">
    <button class="btn-primary">Default</button>
    <button class="btn-primary hover">Hover</button>
    <button class="btn-primary active">active</button>
    <button class="btn-primary disabled">disabled</button>
    <button class="btn-primary loading">loading</button>
    <button class="btn-primary focus">focus</button>
  </div>
  <hr class="hr">
  <h2 class="text-2xl font-900 mr-auto mb-4"> 📃 Rounded</h2>
  <div class="flex flex-wrap gap-3">
    <button class="btn-primary hover">Default</button>
    <button class="btn-primary hover rounded">Default</button>
  </div>
  <hr class="hr">
  <h2 class="text-2xl font-900 mr-auto mb-4"> 📃 Size</h2>
  <div class="flex flex-wrap gap-3 items-end">
    <button class="btn-primary small">small</button>
    <button class="btn-primary">Default</button>
    <button class="btn-primary large">large</button>
  </div>
  <hr class="hr">
</main>
<Footer/>
</body>
</html>
