---
const {img,title} = Astro.props;
---
<!DOCTYPE html>
<html lang="zh-tw">
<head>
  <title>{title}</title>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
  <link rel="icon" type="image/png" sizes="16x16" href={img}>
</head>
<body>
<main id="main" class="min-h-screen content-center p-8">
  <h1 class="flex text-3xl items-center mb-16">
    <img class="mr-4" src={img} alt="logo" width="50" height="50"/>
    {title}
  </h1>
  <slot />
</main>

</body>
</html>
